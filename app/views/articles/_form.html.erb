<%= render 'shared/alt-nav' %>

<body id="form-body" class="form-content">
	<div class="container">
		<%= simple_form_for @article, html: { multipart: true } do |f| %>
	  <% if @article.errors.any? %>
	    <div id="errors"
	      <h2><%= pluralize(@article.errors.count, "error") %> prevented this article from being saved</h2>
	      <ul>
		    <% @article.errors.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		      <% end %>
	     </ul>
	    </div>
	<% end %>
<br>
		  <%= f.input :title, placeholder: 'Title of Post', label: false %>
			<br>
		  <%= f.text_area :body, placeholder: 'Post content', class: "col-xs-12 article-text-input", cols: 40, rows: 30 %>

			<%= f.file_field :image, class: 'u-full-width file-field-text', value: "Image" %>

			<%= f.file_field :header, class: 'u-full-width file-field-text', value: "Header" %>

			<br>

			<%= f.text_field :video_url, class: 'u-full-width', placeholder: "Enter youtube url" %>
			<br>
			<br>
			<%= f.text_field :tag_list, placeholder: 'add tags here', label: "Tags" %>
			<br>
			<br>
		  <%= f.button :submit %>
		  <%=link_to 'Cancel', articles_path, class: "btn btn-default" %>
		<% end %>
	</div>
</body>   