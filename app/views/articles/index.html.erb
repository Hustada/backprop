<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top" data-offset="0">
  <%= render 'shared/main-nav' %>
  

  <!-- header -->
  <header class="intro" id="intro" data-speed="6" data-type="background">
    <div class="intro-body">
      <div class="container">
        <div class="row">
          <div class="brand-box">
            <div class="col-md-8 col-md-offset-2">
              <h1 class="brand-heading">Backpropagate</h1>
              <p class="intro-text">Start Here</p>
              <a class="btn btn-circle page-scroll" href="#about">
                <i class="fa fa-angle-double-down animated" id="nav-circle"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- end of header -->

<!-- beginning of about section -->
  <section id="about" data-speed="4" data-type="background" class="container content-section text-center light-section">
    <div class="container">
      <div class="row">
        <h2>I'm getting serious about getting serious and stuff. I will spam you as much as possible!</h2>
          <p>
            No spam, only great content!
          </p>
        <form class="form-inline">
          <div class="form-group">
              <input type="email" class="form-control" id="email" value="Enter Your Email">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </section>

  <section id="article" data-speed="2" data-type="background" class="content-section paragraph-section">
        <div class="article-section ">
            <div class="container">
                <div class="col-lg-8 col-lg-offset-2">
                  <% if @article.nil? %>
                    <h2 class="center-title"><%= @recent_article.title  %></h2>
                    <p class="article-paragraph">
                      <%= @recent_article.body %>
                    </p>
                    <%=link_to "Read More", list_articles_path, class: "btn btn-default" %>
                    <% else %>
                    <%= render 'shared/dummy-article' %>
                  <% end %>
                </div>
            </div>
        </div>
    </section>

  
  <section id="recent" data-speed="2" data-type="background" class="text-center dark-section-background smaller-content-section">
    <h2>Recent Posts</h2><br><br>
   <div class="container">
      <div class="row">

        <% @popular_articles.each do |article| %>
                <div class="col-sm-3">
                  <div class="card card-inverse">
                    <% if article.image.present? %>
                    <%=link_to image_tag(article.image.url, class: "card-img thumbnail img-responsive"), article %>
                    <% else %>
                    <%= link_to image_tag(get_random_image, class: 'card-img thumbnail img-responsive'), article %>
                    <% end %>
                    <div class="card-img-overlay">
                      <h5 class="card-title"><%=link_to "#{article.title}", article %></h5>
                      <p class="card-text"><small class="text-muted">posted <%= time_ago_in_words(article.created_at) %> ago</small></p>
                    </div>
                  </div>
                </div>
        <% end %>





      </div>
    </div>
    
  </section>
</body>

<%= render 'shared/new-footer' %>

