  <section id="recent" class="dark-section-background content-section text-center">
    <div class="article-section dark-section">
    <h1>Recent Articles</h1>
      <div class="container-fluid">
      <br>
    <div class="row">
        <!-- item -->
        <% @popular_articles.each do | article | %>
          <div class="col-xs-6 col-sm-3">
              <div class="thumbnail">
                  <div class="img-wrapper">
                      <%= image_tag article.header.url %>
                  </div>
              </div>
