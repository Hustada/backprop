<header>
<% if @article.header.present? %>
	<%= image_tag @article.header.url, class: "article-show-image" %>
<% end %>
</header>
<% if @article.video_url.present? %>
<div class="video-container">
	<div class="container">
		<div class="videoWrapper"><%= embed(@article.video_url) %></div>
<% end %>
	</div>
</div>
<div class="container">
	<h3 class="article-title js--article-title"><%= @article.title %></h3>
		<i><%=@article.user.email %> -- <%= @article.created_at.strftime("%h %d %y") %></i>
	<br>
		<%= simple_format(@article.body, class: "article-body article-paragraph js--article-body") %>
		<p><%=link_to 'home', root_path %></p>
		<% if user_signed_in?  && is_admin? %>
		<%=link_to 'delete article', (@article),
								method: :delete,
								class: "button",
								data: {confirm: "Are you sure?" } %>
		<%=link_to 'edit article', edit_article_path(@article), class: "button" %>
		<% end %>
</div>