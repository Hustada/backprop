<header>
<% if @article.header.present? %>
	<%= image_tag @article.header.url, class: "article-show-image" %>
<% end %>
</header>
<div class="container">
	<div class="row">
		<div class="twelve columns">
			<h3 class="article-title js--article-title"><%= @article.title %></h3><br>
				<p class="article-body js--article-body"><%= simple_format(@article.body) %></p>
				<p><%=link_to 'home', root_path %></p>
				<% if logged_in?  && is_admin? %>
				<%=link_to 'delete article', (@article),
										method: :delete,
										class: "button",
										data: {confirm: "Are you sure?" } %>
				<%=link_to 'edit article', edit_article_path(@article), class: "button" %>
				<% end %>
		</div>
	</div>
</div>